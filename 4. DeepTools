#install DeepTools

conda install -c conda-forge -c bioconda deeptools

#or

pip install deeptools

#convert .bam files to .bw

#sample 1
bamCoverage \
    -b 1.bam \
    -o 1.bw \
    --normalizeUsing CPM \
    --binSize 25 \
    --extendReads

#sample 2
bamCoverage \
    -b 2.bam \
    -o 2.bw \
    --normalizeUsing CPM \
    --binSize 25 \
    --extendReads

